.weui-media-box {
    padding-top: 16px;
    padding-bottom: 16px;
}

.weui-media-box_appmsg .weui-media-box__hd {
    width: 32px;
    height: 32px;
    margin-right: 10px;
}

.weui-media-box__title {
    font-size: 14px;
    font-weight: normal;
}

.weui-media-box__desc {
    font-size: 12px;
    line-height: 1.2;
    padding-top: 0px;
}

.weui-panel {
    margin-top: -1px;
}

